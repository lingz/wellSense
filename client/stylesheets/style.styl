textarea[name='body']
    width: 100%
    height: 130px
    padding: 5px 15px
    -moz-padding-end: 5px 15px;
    -moz-padding-start: 5px 15px;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    background:white
    outline:0.5px
    border: 1px solid gray
    color: black
    font-weight: 300

input[type="submit"]
    margin-top: 3px
    width:160px
    height:40px
    border: 1px solid gray
    position:relative
    text-align: center
    background: white
    font-size: 1.5em
    text-decoration: none
    color: darkergray
    font-weight: 300
    float: right

input[type="submit"]:hover{
    background: gray
}

input[type="checkbox"]
    margin: 3px 5px 0px 3px
    -webkit-appearance: none
    background-color: white
    padding: 7px
    display: inline-block
    position: relative
    border 1px solid gray
input[type="checkbox"], input[type="checkbox"]:checked:active
input[type="checkbox"]: checked
    background-color: white
    border: 1px solid gray 
    color: #99a1a7
input[type="checkbox"]:checked:after
    content: '\2715'
    font-size: 12px
    position: absolute
    top: 0px
    left: 3px
    color: darkergray

/*code from http://uplifted.net/programming/change-default-select-dropdown-style-just-css/ */
select {
  margin-top: 3px
  padding: 3px
  border: 1px solid gray
  -webkit-appearance: none;  /*Removes default chrome and safari style*/
  -moz-appearance: none; /* Removes Default Firefox style*/
  background: url('/arrows.png') no-repeat;  /*Adds background-image*/
  background-position: 100px 2px;  /*Position of the background-image*/
  width: 130px; /*Width of select dropdown to give space for arrow image*/
  text-indent: 0.01px; /* Removes default arrow from firefox*/
  text-overflow: "";  /*Removes default arrow from firefox*/
  font-weight: 300
  border-radius: 0
}


